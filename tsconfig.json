{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "target": "es2017",
    "esModuleInterop": true,
    "lib": ["ESNext"],
    "sourceMap": true,
    "baseUrl": "./packages",
    "paths": {
      "@typerpc/parser": ["parser/lib"],
      "@typerpc/plugin": ["types/plugin"],
      "@typerpc/schema": ["schema/lib"],
      "@typerpc/schema-builder": ["schema-builder/lib"],
      "@typerpc/test-utils": ["test-utils/lib"],
      "@typerpc/types": ["types/lib"],
      "@typerpc/validators": ["validators/lib"]
    }
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ],
  "include": [
    "src/**/*"
  ]
}
